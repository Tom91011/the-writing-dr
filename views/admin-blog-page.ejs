<div class="site-wrapper admin-blog-page">
  <header class="on-load admin-header">
    <a name=#top></a>
    <img class="header-logo" src="/public/images/homepage/the_writing_doctor_logo.jpg" alt="The Writing Doctor Logo" loading="lazy" style="max-width: 100px;">
    <%- include("partials/nav-bar") -%>
    <h1 class="admin-title">BLOGS ADMIN PAGE</h1>
  </header>

<main>
  <div class="blog-container admin-blogs-container">
    <div class="blog-page-inner">

      <div class="blog">
        <form class="" action="/delete" method="post">
          <button type="submit" name="delete" value=<%= blogId %>>DELETE</button>
        </form>

         <form class="" action="/update" method="post">
           <input type="input" class="form-control" name="blogTitle" value="<%= title %>">
           <input type="input" class="form-control" name="blogDate" value="<%= date %>">
           <input type="input" class="form-control" name="blogImage" value="<%= imageLink %>">
           <input type="input" class="form-control" name="blogImageAlt" value="<%= altImage %>">
            <textarea id="new-content" name="blogContent" rows="6" ><%- content %></textarea>

           <button type="submit" name="update" value=<%= blogId %>>Update Blog</button>
         </form>

          <div class="blog-image">
            <img class="" src= <%= imageLink %> alt="<%- altImage %>">
          </div>
          <div class="blog-info">
            <h2><%= blogId %></h2>
            <h2> <%= title %> </h2>
            <h3> <%= date %> </h3>
          </div>
          <div class="blog-content">
            <p> <%- markedContent %></p>
          </div>
      </div>

    </div>
  </div>

</main>

</div>
