</div> -->
<div class="site-wrapper">
    <header class="on-load">
      <a name=#top></a>
      <img class="header-logo" src="./public/images/homepage/the_writing_doctor_logo.jpg" alt="The Writing Doctor Logo" loading="lazy" style="max-width: 100px;">
      <%- include("partials/nav-bar") -%>
    </header>


      <div class="blogs-container">
        <div class="blogs-hero-title">
          <h1>KEEP YOUR FINGER ON THE PULSE<span class="highlight-green">.</span> </h1>
        </div>
        <div class="headline-blog">
          <div class="blog-info-headline">
            <div class="blog-info-headline-inner">
              <div class="blog-title-headline">
                <h2><%=foundItems[0].title%></h2>
              </div>
              <div class="blog-date-headline">
                <h3 class="blog-date"><%=foundItems[0].date%></h3>
              </div>
            </div>
          </div>
          <div class="blog-image-headline">
            <img class="" src=<%=foundItems[0].image%> alt=<%= foundItems[0].imageAlt %>">
          </div>

        </div>
        <div class="blog-grid">

          <% foundItems.forEach((post) => {%>
            <div class="blog-container">
              <div class="blog">
                <a href="./blog.html">
                  <div class="blog-image">
                    <img class="" src=<%= post.image %> alt=<%= post.imageAlt %>>
                  </div>
                  <div class="blog-info">
                    <h2> <%= post.title %> </h2>
                    <h3> <%= post.date %> </h3>
                  </div>
                </a>
              </div>
            </div>
          <% }) %>



      </div>
      <div class="load-more">
        <button type="button" name="button">Load more</button>
      </div>
      <div class="other-writing">
        <h1>FOLLOW MY OTHER WRITING</h1>
        <div class="logo-section">
          <div class="brands">
            <img src="./public/images/blogs/featherless_biped_final.png" alt="Beard Sorcery Logo" loading="lazy">
            <img src="./public/images/blogs/big_picture_logo.png" alt="Beard Sorcery Logo">
            <img src="./public/images/blogs/dark_continent_gold.png" alt="Beard Sorcery Logo">
          </div>

        </div>
      </div>
