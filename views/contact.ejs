<div class="site-wrapper">
    <header class="on-load">
      <a name=#top></a>
      <img class="header-logo" src="./public/images/homepage/the_writing_doctor_logo.jpg" alt="The Writing Doctor Logo" loading="lazy" style="max-width: 100px;">
      <%- include("partials/nav-bar") -%>
    </header>
    <main>
      <div class="hero hero-contact">
        <div class="hero-main">

          <div class="hero-slogan">
            <h1>
              IN NEED OF
              <br>
              THE WRITING DOCTOR<span class="highlight-pink">.</span>
              <br>
            </h1>
            <h3>Book today!</h3>
          </div>

        </div>

      </div>

      <div class="content-section contact-outer-container top-section-contact">

        <div class="line">
        </div>
        <div class="content contact-inner-container">
          <h3>
            Send me a message
          </h3>

          <form class="" action="/new-email" method="post">
            <div class="contact-top-row">

              <input type="text" id="fname" name="firstName" placeholder="First Name">
              <input type="text" id="fname" name="lastName" placeholder="Last Name">
              <input type="email" id="email" name="email" placeholder="Email">
              <input type="tel" id="phone" name="phone" placeholder="Phone">

            </div>
            <div class="contact-bottom-row">
              <textarea id="message" name="message" rows="6" maxlength="1000" placeholder="Message"></textarea>
            </div>
            <div class="submit-row">

              <p class="max-character-message">0 to 1000 max characters</p>
              <button type="submit" name="submit">Send Message</button>

            </div>
          </form>

        </div>
      </div>
    </main>



    <%- include("partials/footer") -%>
  </div>
  </body>
